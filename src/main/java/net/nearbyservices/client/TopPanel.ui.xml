<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:service="urn:import:net.nearbyservices.client">


	<ui:style>
	.statusDiv {
		text-align: left;
		margin: 1em;
	}
	
	.linksDiv {
		text-align: left;
	}
	
	.addServiceLink {
		text-decoration: underline;
	}
	</ui:style>

	<g:HTMLPanel>


		<div class="{style.statusDiv}">
			<div>
				<b>Welcome to Nearbyservices</b>
			</div>

			<div class='{style.linksDiv}'>
				<g:Anchor href='javascript:;' ui:field='addServiceLink'
					styleName='{style.addServiceLink}'>Add service</g:Anchor>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>