<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:service="urn:import:net.nearbyservices.client">

	<ui:style>
		.detail {
		border: 1px solid #666;
		background-color: white;
		}

		.outer {
		cursor: pointer;
		width: 100%;
		height: 100%;
		/* @alternate */
		cursor:
		hand;
		}

		.header {
		background: #eee;
		border-bottom: 1px solid #666;
		width: 100%;
		padding: 0.4em;
		}

		.headerItem {
		margin-bottom: 0.5em;
		}

		.servicesListVP {
		width: 100%;
		align-content: center;
		}

		.regpad {
		margin:
		5px;
		}
	</ui:style>

	<g:DockLayoutPanel styleName='{style.outer}' unit='EM'>
		<g:north size='2'>
			<g:FlexTable ui:field='header' styleName='{style.header}'
				cellSpacing='0' cellPadding='0' />
		</g:north>

		<g:center>
			<g:ScrollPanel>
				<g:VerticalPanel ui:field='servicesListVP'
					styleName='{style.servicesListVP}'>
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>