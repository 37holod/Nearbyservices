<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:service="urn:import:net.nearbyservices.client">
	<ui:style>
	.horizontalPanelStyle {
		border: 1px solid #666;
		width: 99%;
		padding: 5px;
		margin: 5px;
	}
	
	.verticalPanelStyle {
		padding: 5px;
		margin: 5px;
	}
	
	.flowPanelStyle {
		padding: 5px;
		margin: 5px;
	}
	</ui:style>
	<!--<g:SimplePanel> <g:Button ui:field='button'></g:Button> </g:SimplePanel> -->
	<g:HorizontalPanel
		styleName='{style.horizontalPanelStyle}'>
		<g:cell>
			<g:FlowPanel styleName='{style.flowPanelStyle}'>
				<g:Image ui:field='image'></g:Image>
			</g:FlowPanel>
		</g:cell>
		<g:cell width="100%">
			<g:VerticalPanel
				styleName='{style.verticalPanelStyle}'>
				<g:FlowPanel styleName='{style.flowPanelStyle}'>
					<g:Label ui:field='authorLabel'>Author</g:Label>
				</g:FlowPanel>
				<g:FlowPanel styleName='{style.flowPanelStyle}'>
					<g:Label ui:field='subjectLabel'>Subject</g:Label>
				</g:FlowPanel>
				<g:FlowPanel styleName='{style.flowPanelStyle}'>
					<g:Label ui:field='detailsLabel'>Details</g:Label>
				</g:FlowPanel>

			</g:VerticalPanel>
		</g:cell>
	</g:HorizontalPanel>

</ui:UiBinder> 
