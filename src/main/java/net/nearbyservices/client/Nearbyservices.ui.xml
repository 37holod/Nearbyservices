<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:service="urn:import:net.nearbyservices.client">
	<ui:style>
	.margins {
		border: 1px solid #666;
		margin: 2px;
	}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='5' margin='20'>
			<service:TopPanel ui:field='topPanel'
				styleName='{style.margins}' />
		</g:north>
		<g:west size='20'>
			<service:Shortcuts ui:field='shortcuts'
				styleName='{style.margins}' />
		</g:west>
		<g:north size='20'>
			<service:ServicesList ui:field='servicesList'
				styleName='{style.margins}' />
		</g:north>
		<g:center>
			<service:ServiceDetail ui:field='serviceDetail'
				styleName='{style.margins}' />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 


